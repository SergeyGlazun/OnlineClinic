@model OnlineClinic.Models.RequestDoctor


<div class="container">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <form asp-action="RecordPage">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Форма заполнения к врачу</h3>
                <div class="form-group">
                    <label asp-for="Data" class="control-label">День на запись </label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SurnamePatient" class="control-label">Пациент</label>
                    <input asp-for="SurnamePatient" class="form-control" readonly/>
                    <span asp-validation-for="SurnamePatient" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SurnameDoctor" class="control-label" >Врач</label>
                    <input asp-for="SurnameDoctor" class="form-control" readonly/>
                    <span asp-validation-for="SurnameDoctor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TimeReceipt" class="control-label" >Время записи</label>
                    <input asp-for="TimeReceipt" class="form-control" readonly />
                    <span asp-validation-for="TimeReceipt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OfficeNumber" class="control-label" >Кабинет</label>
                    <input asp-for="OfficeNumber" class="form-control" readonly/>
                    <span asp-validation-for="OfficeNumber" class="text-danger"></span>
                </div>


                <input asp-for="IdDoctor" style="display:none" />
                <input asp-for="IdPatient" style="display:none" />

                <div class="form-group">
                    <input type="submit" value="Подтвердить" class="btn btn-primary" />
                </div>


                <div class="btn btn-primary" onclick="location.href='/Home/DoctorInformation/?id=@Model.IdDoctor&day=@Model.Data'">
                    отмена
                </div>

            </form>
        </div>
    </div>

</div>


